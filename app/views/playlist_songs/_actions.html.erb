<%= link_to playlist_song_path(playlist_song), remote: true, method: :delete do %>
  <%= fa_icon 'eraser' %>
<% end %>

<% unless playlist_song.first? %>
  <%= link_to move_higher_playlist_song_path(playlist_song), remote: true, method: :patch do %>
    <%= fa_icon 'arrow-up'  %>
  <% end %>
<% end %>

<% unless playlist_song.last? %>
  <%= link_to move_lower_playlist_song_path(playlist_song), remote: true, method: :patch do %>
    <%= fa_icon 'arrow-down' %>
  <% end %>
<% end %>
