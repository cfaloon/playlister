<% content_for :heading do %>
  <span class="resource-name"><%= @artist.name %></span>
<% end %>
<% content_for :sub_heading, 'Artist' %>

<h1>Playlists featuring <span class="resource-name"><%= @artist.name %></span></h1>

<div class="row">
  <div class="col-12 col-md-9">
    <div class="card-columns">
      <%= render @artist.playlists.order('playlists.created_at').includes(:user).uniq %>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">Albums</h4>
      </div>
      <div class="card-body">
        <ul class="list-unstyled">
          <% @artist.albums.each do |album| %>
          <li>
            <%= link_to album.name, album %>
            (<%= link_to "#{album.label.name}", album.label %>)
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
