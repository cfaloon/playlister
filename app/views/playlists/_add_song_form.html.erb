<%= form_with url: add_song_playlist_path(id: playlist.id) do |f| %>
<div class='row'>
<div class='col-sm-2'>
  <div class='form-group'>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, autofocus: true %>
  </div>
</div>

<div class='col-sm-2'>
  <div class='form-group'>
    <%= f.label :song_name %>
    <%= f.text_field :song_name %>
  </div>
</div>

<div class='col-sm-2'>
  <div class='form-group'>
    <%= f.label :album_name %>
    <%= f.text_field :album_name %>
  </div>
</div>

<div class='col-sm-2'>
  <div class='form-group'>
    <%= f.label :label_name %>
    <%= f.text_field :label_name %>
  </div>
</div>
</div>
<div class='row'>
  <%= f.submit 'Add Song to Playlist', class: 'btn btn-info'%>
</div>
<% end %>
