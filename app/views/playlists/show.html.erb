<div class='row'>
  <h1><%= @playlist.name %></h1>
</div>

<% @playlist.songs.each do |song| %>
<div class='row'>
  <div class='col-md-3'>
    <%= link_to song.name, song_path(song) %>
  </div>
  <div class='col-md-3'>
    <%= link_to song.album.artist.name, artist_path(song.album.artist) %>
  </div>
  <div class='col-md-3'>
    <%= link_to song.album.name, album_path(song.album) %>
  </div>
  <div class='col-md-3'>
    <%= link_to song.album.label.name, song.album %>
  </div>
</div>
<% end %>

<%= form_with url: add_song_path(id: @playlist.id) do |f| %>
<div class='row'>
<div class='col-md-3'>
  <div class='form-group'>
    <%= f.label :song_name %>
    <%= f.text_field :song_name %>
  </div>
</div>

<div class='col-md-3'>
  <div class='form-group'>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
</div>

<div class='col-md-3'>
  <div class='form-group'>
    <%= f.label :album_name %>
    <%= f.text_field :album_name %>
  </div>
</div>

<div class='col-md-3'>
  <div class='form-group'>
    <%= f.label :label_name %>
    <%= f.text_field :label_name %>
  </div>
</div>
</div>
<div class='row'>
  <%= f.submit 'Add Song to Playlist', class: 'btn btn-info'%>
</div>
<% end %>
