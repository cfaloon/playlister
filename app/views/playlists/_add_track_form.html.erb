<%= form_with url: add_track_playlist_path(id: playlist.id), autocomplete: 'off' do |f| %>
<div class='form-row'>
  <div class='col-3'>
    <%= f.label :artist_name %>
    <%= f.select :artist_name, [], {}, id: :artist_name %>
  </div>

  <div class='col-3'>
    <div class='form-group'>
      <%= f.label :song_name %>
      <%= f.text_field :song_name, id: :song_name %>
    </div>
  </div>

  <div class='col-3'>
    <div class='form-group'>
      <%= f.label :album_name %>
      <%= f.select :album_name, [], {}, id: :album_name %>
    </div>
  </div>

  <div class='col-3'>
    <div class='form-group'>
      <%= f.label :label_name %>
      <%= f.select :label_name, [], {}, id: :label_name %>
    </div>
  </div>
</div>
<div class='form-row'>
  <%= f.submit 'Add Song to Playlist', class: 'btn btn-info'%>
</div>
<% end %>
