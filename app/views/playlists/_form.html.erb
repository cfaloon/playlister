<div class="row">
  <% if playlist.errors.any? %>
  <h4>The following errors prevented the playlist from saving:</h4>
  <% playlist.errors.full_messages.each do |message| %>
  <div class="col-sm-12">
    <p class="bg-danger text-center">
      <%= message %>
    </p>
  </div>
  <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= form_with(model: playlist, local: true) do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :played_at %>
      <%= f.datetime_field :played_at, class: 'form-control' %>
    </div>

    <%= f.submit nil, class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
