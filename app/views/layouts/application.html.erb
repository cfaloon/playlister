<!DOCTYPE html>
<html>
<head>
  <title>Playlister</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class='container'>
    <nav class='navbar navbar-default'>
      <%= link_to 'Playlists', playlists_path, class: 'navbar-brand' %>
      <%= link_to 'Artists', artists_path, class: 'navbar-brand' %>
      <%= link_to 'Albums', albums_path, class: 'navbar-brand' %>
      <%= link_to 'Labels', labels_path, class: 'navbar-brand' %>
      <div class='pull-right'>
        <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-brand' %>
        <% else %>
        <div style="margin-right: 23px; margin-top: 10%;">
          <%= link_to "Sign In", new_user_session_path %>
          //
          <%= link_to "Sign Up", new_user_registration_path %>
        </div>
        <% end %>
      </div>
    </nav>
  </div>

  <div class='container'>

    <% flash.each do |level, message| %>
    <div class='row'>
      <div class='col-md-6 col-md-offset-3'>
        <p class='bg-<%= level %> text-center'>
          <%= message %>
        </p>
      </div>
    </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
