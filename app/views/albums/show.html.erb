<% content_for :heading, @album.name %>

<div clas="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Songs</h2>
      </div>
      <div class="card-body">
        <ul>
        <% @album.songs.each do |song| %>
        <li><%= link_to song.name, song %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
