<div class="row">
  <div class="col-sm-8 offset-2 mb-2">
    <% unless collection.any? %>
    <div class="bg-warning px-2 mb-2">
      <h3>No results found.</h3>
    </div>
    <% end %>
    <%= form_with action: action, model: nil, method: :get, local: true do |f| %>
      <%= f.text_field :q, placeholder: 'Search', class: 'form-control' %>
    <% end %>
  </div>
</div>
